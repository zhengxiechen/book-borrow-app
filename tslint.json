{
    "defaultSeverity": "error",
    "extends": [
        "tslint-config-airbnb"
    ],
    "jsRules": {},
    "rules": {
      "eofline": true,
      "import-name": [ false, {} ],
      "indent": [true, "spaces", 2],
      "no-consecutive-blank-lines": true,
      "semicolon": [true, "always"],
      "trailing-comma": [
        true,
        {
          "multiline": {
            "objects": "always",
            "arrays": "always",
            "functions": "never",
            "typeLiterals": "ignore"
          },
          "esSpecCompliant": true
        }
      ],
      "ter-arrow-parens": [true, "as-needed"],
      "ter-indent": [
        true,
        2,
        { "SwitchCase": 1 }
      ]
    },
    "rulesDirectory": []
}
